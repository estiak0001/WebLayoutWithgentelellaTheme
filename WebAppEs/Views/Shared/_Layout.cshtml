                                    </div>
                                </li>*@
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">
                    @RenderBody()
                </div>
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer class="" style="background-color: #080808; color: wheat; font-size: medium;">
                <div class="pull-right">
                    Developed By - Software Department Section (Mobile R&D)
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
