<body style="background-color: #323232!important" class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col" style="background-color: #323232!important">
                <div style="background-color: #323232!important" class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 1px solid; background-color: #1c1c1c;">
                        <a style="font-size: 14px;" href="@Url.Action("Index", "Home")" class="site_title">
                            <img class="" style="height:34px; width:52px; margin:0px" src="~/Logo/waltonlogo.png" /> <span style="color: wheat; font-weight: 600;">&nbsp; &nbsp; CPQC</span>
                        </a>
                    </div>

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_pic">
                            <img src="~/build/images/User_Avatar_2.png" alt="..." class="img-circle profile_img">
                        </div>
                        <div style="padding: 39px 10px 10px; width: 65%; float: left; ">

                            <span style="color: bisque;">@HttpContextAccessor.HttpContext.Session.GetString("Name")</span>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->
                    <br />
                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        @await Component.InvokeAsync("NavigationMenu")
                    </div>

                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    <div class="sidebar-footer hidden-small">
